  <pipeline name="UL.casperJStests">
      <environmentvariables>
        <variable name="testproducts">129990,471100,134000,118836</variable>
      </environmentvariables>
      <materials>
        <svn url="https://svn.gravis.de/testing/trunk" username="XXX" encryptedPassword="XXX" dest="testing" materialName="testing" />
        <svn url="https://svn.gravis.de/go/trunk/" username="XXX" encryptedPassword="XXX" dest="go" materialName="go" />
      </materials>
      <stage name="prepare">
        <jobs>
          <job name="cleanup">
            <tasks>
              <ant buildfile="go/casperjs.xml" target="test.prepare">
                <runif status="passed" />
              </ant>
            </tasks>
            <resources>
              <resource>casperjs</resource>
            </resources>
          </job>
        </jobs>
      </stage>
      <stage name="teststage" fetchMaterials="false">
        <jobs>
          <job name="test">
            <tasks>
              <ant buildfile="go/casperjs.xml" target="test.caspertestsuite">
                <runif status="passed" />
              </ant>

            </tasks>
            <resources>
              <resource>casperjs</resource>
            </resources>
          </job>
        </jobs>
      </stage>
      <stage name="postprocessing">
        <jobs>
          <job name="gather_artefacts">
            <tasks>
              <exec command="echo">
                <arg>"will get screenshots"</arg>
                <runif status="passed" />
              </exec>
              <ant buildfile="go/casperjs.xml" target="test.report">
                <runif status="passed" />
              </ant>
              <ant buildfile="go/casperjs.xml" target="test.recoverartifacts">
                <runif status="passed" />
              </ant>
            </tasks>
          </job>
        </jobs>
      </stage>
